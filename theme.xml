<theme		
			name="A.I. GEN. COMICS FOR CRT &amp; JAMMA"
			version="1.0"
			recalbox="10"
			compatibility="crt,jamma"
			resolutions="qvga,vga"
>

	<formatVersion>4</formatVersion>
	
	<!-- files contains each horizontal and vertical pixel variables for qvga res for pixel perfect work  -->
	<include>${root}/_inc/xml/240p_variables.xml</include>

	<!-- theme variables -->
	<include>${root}/_inc/xml/variables.xml</include>

	<!-- help -->
	<include>${root}/_inc/xml/help.xml</include>

	<!-- menu -->
	<include>${root}/_inc/xml/menu.xml</include>

	<!-- all views -->
	<include>${root}/_inc/xml/all_views.xml</include>

	<!-- system -->
	<include>${root}/_inc/xml/system.xml</include>

	<!-- detailed -->
	<include>${root}/_inc/xml/detailed.xml</include>
	
	<!-- gamelist layout -->	
	<subset 	
				subset="gamelist_layout" 
				title="Gamelist layout" 
				title.fr="Style de la gamelist" 
				help="Choose how your systemlist will look." 
				help.fr="Choisir la mise en page des listes de systèmes." 
	/>
	
    <include 	
				subset="gamelist_layout"
				name="1 - Detailed"
	/>

    <include 	
				subset="gamelist_layout"
				name="2 - Basic"
	>${root}/_inc/xml/additional_gamelist_layout/basic.xml</include>
	
	<!-- gamelist video on/off -->	
	<subset 	
				subset="gamelist_video" 
				title="Games videos" 
				title.fr="Vidéos de jeux" 
				help="Turn on/off videos in gamelists." 
				help.fr="Activer ou désactiver les vidéos dans les listes de jeux." 
	/>
	
    <include 	
				subset="gamelist_video"
				name="1 - ON"
	/>

    <include 	
				subset="gamelist_video"
				name="2 - OFF"
	>${root}/_inc/xml/additional_gamelist_layout/videos_on_off.xml</include>
	
	<!-- overlay system -->	
	<subset 	
				subset="overlay_system" 
				title="Systemview overlay" 
				title.fr="Elements vue système" 
				help="Choose graphics elements to apply on entire screen in system view." 
				help.fr="Choisissez les éléments graphiques supplémentaires à afficher par dessus la vue système.." 
	/>

    <include 	
				subset="overlay_system"
				name="1 - Full"
	>${root}/_inc/xml/overlaysystem_full.xml</include>

    <include 	
				subset="overlay_system"
				name="2 - Just half tones"
	>${root}/_inc/xml/overlaysystem_halftones.xml</include>

    <include 	
				subset="overlay_system"
				name="3 - Simple"
	>${root}/_inc/xml/overlaysystem_simple.xml</include>
	
	<!-- paper texture level -->	
	<subset 	
				subset="paper_texture" 
				title="Paper effect level" 
				title.fr="Intensité de l'effet papier" 
				help="Select level of paper effect on entire theme." 
				help.fr="Réglez l'intensité de l'effet papier sur tout le thème." 
	/>

    <include 	
				subset="paper_texture"
				name="1 - Off"
	>${root}/_inc/xml/paper_off.xml</include>
	
    <include 	
				subset="paper_texture"
				name="2 - Low"
	>${root}/_inc/xml/paper_low.xml</include>
	
    <include 	
				subset="paper_texture"
				name="3 - Medium"
	>${root}/_inc/xml/paper_medium.xml</include>
	
    <include 	
				subset="paper_texture"
				name="4 - Strong"
	>${root}/_inc/xml/paper_strong.xml</include>

</theme>