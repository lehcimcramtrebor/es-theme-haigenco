<theme>
	
	<view name="${v.allViews}">
	
		<extras>
		
			<image 			
							name="systemFrame"
							zIndex="10"
							origin="${p.center}"
							pos="${p.center}"
							size="${s.full}"
			>
							<path>${root}/_inc/systems/default_system.jpg</path>
							<path>${root}/_inc/systems/default_system-en.jpg</path>
							<path.fr>${root}/_inc/systems/default_system.jpg</path.fr>
							
							<path>${root}/_inc/systems/${system.name}/system.jpg</path>
							<path>${root}/_inc/systems/${system.name}/system-en.jpg</path>
							<path.fr>${root}/_inc/systems/${system.name}/system.jpg</path.fr>
								
							<path.US>${root}/_inc/systems/${system.name}/system-us.jpg</path.US>
							
							<path.JP>${root}/_inc/systems/${system.name}/system-jp.jpg</path.JP>
							

			</image>

			<image 			
							name="paper,paper2"
							origin="${p.center}"
							pos="${p.center}"
							size="${s.full}"
			/>

			<image 			
							name="paper"
							zIndex="5000"
			>
			
				<path if="!qvga">${root}/_inc/parts/paper.png</path>
				<path if="qvga">${root}/_inc/parts/paper_240p.png</path>
			
			</image>

			<image 			
							name="paper2"
							zIndex="4999"
			>
			
				<path if="!qvga">${root}/_inc/parts/paper2.png</path>
				<path if="qvga">${root}/_inc/parts/paper2_240p.png</path>
			
			</image>
			
		</extras>
					
	</view>

</theme>