<theme>
	
	<view name="${v.allViews}">
	
		<extras>

			<image 			
							name="header"
							zIndex="11"
							origin="${p.center}"
							pos="${p.center}"
							size="${s.full}"
							path="${root}/_inc/parts/header.png"
							color="${c.frame}"
			/>
		
			<image 			
							name="systemFrame"
							zIndex="10"
							origin="${p.center}"
							pos="${p.center}"
							size="${s.full}"
							color="${c.frame}"
			>							
							<path>${root}/_inc/systems/${system.name}/system.png</path>
							<path>${root}/_inc/systems/${system.name}/system-en.png</path>
							<path.fr>${root}/_inc/systems/${system.name}/system.png</path.fr>
								
							<path.US>${root}/_inc/systems/${system.name}/system-us.png</path.US>
							
							<path.JP>${root}/_inc/systems/${system.name}/system-jp.png</path.JP>

							<path.fr>${root}/_inc/systems/test.png</path.fr>
			</image>

			<image 			
							name="paper,paper2"
							origin="${p.center}"
							pos="${p.center}"
							size="${s.full}"
			/>

			<image 			
							name="paper"
							zIndex="5000"
			>
				<path if="!qvga">${root}/_inc/parts/paper.png</path>
				<path if="qvga">${root}/_inc/parts/paper_240p.png</path>
			</image>

			<image 			
							name="paper2"
							zIndex="4999"
			>
				<path if="!qvga">${root}/_inc/parts/paper2.png</path>
				<path if="qvga">${root}/_inc/parts/paper2_240p.png</path>
			</image>
			
		</extras>
					
	</view>

</theme>